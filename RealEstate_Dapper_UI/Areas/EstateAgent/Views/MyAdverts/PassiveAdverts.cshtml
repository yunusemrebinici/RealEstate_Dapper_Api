@model List<RealEstate_Dapper_UI.Dtos.ProductDtos.ResultProductAdvertListWithCategoryByEmployeeDto>
@{
	ViewData["Title"] = "PassiveAdverts";
	Layout = "~/Areas/EstateAgent/Views/LayoutEstateAgent/Index.cshtml";
	int count = 0;
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">İlanlarım</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">İlan Başlığı </th>
								<th scope="col">Şehir </th>
								<th scope="col">İlçe</th>
								<th scope="col">Kategori</th>
								<th scope="col">Fiyat</th>
								<th scope="col">Tür</th>
								<th scope="col">Günün Fırsatı</th>
								<th scope="col">Sil</th>
								<th scope="col">İlan Durumu</th>
								<th scope="col">Güncelle</th>
								<th scope="col">Sitede Gör</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.title</td>
									<td>@item.city</td>
									<td>@item.district</td>
									<td>@item.categoryName</td>
									<td>@item.price</td>
									<td>@item.type</td>
									@if (item.DealOfTheDay == true)
									{


										<td><a href="/Product/DealOfTheDayStatusFalse/@item.productID" class="btn btn-success ">pasif yap</a></td>

									}
									else
									{

										<td><a href="/Product/DealOfTheDayStatusTrue/@item.productID" class="btn btn-outline-danger ">aktif yap</a></td>

									}


									<td><a href="/Product/DeleteProduct/@item.productID" class="btn btn-outline-danger ">Sil</a></td>
									<td><a href="/Product/DeleteProduct/@item.productID" class="btn btn-outline-info ">Aktif Yap</a></td>
									<td><a href="~/Product/UpdateProduct/@item.productID" class="btn btn-outline-info ">Güncelle</a></td>
									<td><a href="~/Product/ProductDetail/@item.productID" class="btn btn-primary ">Sitede Gör</a></td>

								</tr>
							}
						<td><a href="/Product/CreateProduct/" class="btn btn-info ">Yeni İlan</a></td>

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

