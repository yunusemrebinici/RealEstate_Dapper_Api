@model List<ResultBottomGridDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/Index.cshtml";
	int count = 0;
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Biz Kimiz Tablosu</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">İcon </th>
								<th scope="col">Başlık </th>
								<th scope="col">Açıklama </th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.Icon</td>
									<td>@item.Title</td>
									<td>@item.Description</td>
									<td><a href="/BottomGrid/DeleteBottomGrid/@item.BottomGridID" class="btn btn-outline-danger ">Sil</a></td>
									<td><a href="/BottomGrid/UpdateBottomGrid/@item.BottomGridID" class="btn btn-outline-info ">Güncelle</a></td>
								</tr>
							}
						<td><a href="/BottomGrid/CreateBottomGrid/" class="btn btn-info "> Yeni Alt Öne Çıkan İlanlar Kayıt</a></td>

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

