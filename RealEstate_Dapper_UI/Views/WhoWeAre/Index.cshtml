@model List<ResultWhoWeAreDetailDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Biz Kimiz Tablosu</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Başlık </th>
								<th scope="col">Alt Başlık</th>
								<th scope="col">Açıklama 1 </th>
								<th scope="col">Açıklama 2 </th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<th scope="row">@item.title</th>
									<td>@item.subTitle</td>
									<td>@item.description1</td>
									<td>@item.description2</td>


									<td><a href="/WhoWeAre/DeleteWhoWeAreDetail/@item.whoWeAreDetailID" class="btn btn-outline-danger ">Sil</a></td>
									<td><a href="~/WhoWeAre/UpdateWhoWeAre/@item.whoWeAreDetailID" class="btn btn-outline-info ">Güncelle</a></td>

								</tr>
							}
						<td><a href="/WhoWeAre/CreateWhoWeAre/" class="btn btn-info ">Biz Kimiz Yeni Kayıt</a></td>

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

