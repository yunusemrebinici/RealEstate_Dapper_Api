@model List<ResultLast5ProductWithCategoryDto>

@{
	int count = 0;
}
<div class="container-fluid pt-4 px-4">
	<div class="bg-light text-center rounded p-4">
		<div class="d-flex align-items-center justify-content-between mb-4">
			<h6 class="mb-0">Son 5 Kiralık İlan Tablosu</h6>
			<a href="">Show All</a>
		</div>
		<div class="table-responsive">
			<table class="table text-start align-middle table-bordered table-hover mb-0">
				<thead>
					<tr class="text-dark">
						<th scope="col">#</th>
						<th scope="col">Tarih</th>
						<th scope="col">Başlık</th>
						<th scope="col">Şehir-İlçe</th>
						<th scope="col">Kategori</th>
						<th scope="col">Fiyat</th>
						<th scope="col">İlanı Gör</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						count++;
						<tr>
							<td>@count</td>
							<td>@item.AdvertisementDate.ToString("dd-MM-yyyy")</td>
							<td>@item.Title</td>
							<td>@item.City @item.District</td>
							<td>@item.CategoryName</td>
							<td>@item.Price.ToString("0.00 ₺")</td>
							
							<td><a class="btn btn-sm btn-primary" href="">İlanı Gör</a></td>
						</tr>

					}
									
				</tbody>
			</table>
		</div>
	</div>
</div>