@model List<ResultCategoryDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Kategori Tablosu</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Kategori Adı </th>
								<th scope="col">Durum </th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<th scope="row">@item.CategoryID</th>
									<td>@item.CategoryName</td>
									@if (item.CategoryStatus==true)
									{
										  <td>Aktif</td>
									}	
									else{ <td>Pasif</td> }

									@* <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger ">Sil</a></td> *@

									<td>
										<button class="btn btn-danger btn-sm" onclick="openModal('deleteModal', '@item.CategoryName adlı kategoriyi silmek istediğinize emin misiniz?', '/Category/DeleteCategory/@item.CategoryID')">
											Sil
										</button>
									</td>

									<td><a href="~/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-info ">Güncelle</a></td>
									
								</tr>
							}
						<td><a href="~/Category/CreateCategory" class="btn btn-info ">Yeni Kayıt</a></td>

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>


<!-- Modal -->
<div id="deleteModal" class="modal fade" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="deleteModalLabel">Silme Onayı</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<p id="deleteMessage"></p>
			</div>
			<div class="modal-footer">
				<a id="confirmButton" href="#" class="btn btn-danger">Evet, Sil</a>
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
			</div>
		</div>
	</div>
</div>