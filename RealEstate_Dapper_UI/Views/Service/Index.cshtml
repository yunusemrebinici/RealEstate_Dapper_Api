@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Biz Kimiz Tablosu</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Servis Adı </th>
								<th scope="col">Servis Durumu</th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<th scope="row">@item.ServiceID</th>
									<td>@item.ServiceName</td>
									@if (item.ServiceStatus==true)
									{
										<td>Aktif</td>
									}
									else
									{
										<td>Pasif</td>
									}



									<td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger ">Sil</a></td>
									<td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-info ">Güncelle</a></td>

								</tr>
							}
						<td><a href="/Service/CreateService/" class="btn btn-info "> Yeni Servis Kayıt</a></td>

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

