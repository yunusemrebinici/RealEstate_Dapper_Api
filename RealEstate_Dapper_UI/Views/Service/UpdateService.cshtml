@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Admin/Index.cshtml";
}


<form method="post">
	<div class="container-fluid pt-4 px-4">
		<div class="row g-4">
			<div class="col-12">
				<div class="bg-light rounded h-100 p-4">
					<h6 class="mb-4">Personel Ekleme Sayfası</h6>
					<div class="table-responsive">
						<table class="table">
							@Html.HiddenFor(x=>x.ServiceID)
							<label>Servis Adı</label>
							<input type="text" asp-for="ServiceName" class="form-control" />
							<br />
							<input type="radio" asp-for="ServiceStatus" value="true" id="active" />
							<label for="active">Aktif</label>

							<input type="radio" asp-for="ServiceStatus" value="false" id="inactive" />
							<label for="inactive">Pasif</label>
							<br />

							<button class="btn btn-primary">Kaydet</button>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

