@{
	ViewData["Title"] = "PropertySingle";
	Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb">
	<div class="breadcrumb-bg breadcrumb-bg-about pt-5">
		<div class="container pt-lg-5 py-3">
		</div>
	</div>
</section>
<section class="w3l-breadcrumb">
	<div class="container">
		<ul class="breadcrumbs-custom-path">
			<li><a href="/Default/Index/">Ana Sayfa</a></li>
			<li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlanlar</li>
			<li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlan Detayları</li>
		</ul>
	</div>
</section>
<!--/blog-post-->
<section class="w3l-blog post-content py-5">

	<div class="container py-lg-4 py-md-3 py-2">
		<div class="inner mb-4">
			<ul class="blog-single-author-date align-items-center">
				<li>
					<div class="listing-category"><span>@ViewBag.type @ViewBag.slugUrl </span></div>
				</li>
				<li><span class="fa fa-clock-o"></span> Yaklaşık @ViewBag.date Ay Önce</li>
				<li><span class="fa fa-eye"></span> 250 Görüntülenme</li>
			</ul>
		</div>
		<div class="post-content">
			<h2 class="title-single">@ViewBag.title1</h2>
		</div>
		<div class="blo-singl mb-4">
			<ul class="blog-single-author-date align-items-center">
				<li>
					<p>@ViewBag.address @ViewBag.district / @ViewBag.city</p>
				</li>
				<li><span class="fa fa-bed"></span> @ViewBag.beds Yatak Odası</li>
				<li><span class="fa fa-bath"></span> @ViewBag.baths Banyo </li>
				<li><span class="fa fa-share-square-o"></span>@ViewBag.size m2</li>
			</ul>
			<ul class="share-post">
				<a href="#url" class="cost-estate m-o">@ViewBag.price ₺</a>
			</ul>
		</div>
		<div class="row">
			<div class="col-lg-8 w3l-news">
				<div class="blog-single-post">

					@await Component.InvokeAsync("_PropertySliderComponentPartial", new { id = ViewBag.i })

					<div class="single-post-content">
						<h3 class="post-content-title mb-3">İlan Açıklaması</h3>
						<div class="single-bg-white">
							<p class="mb-4">
								@ViewBag.description
							</p>
						</div>

						<div class="single-bg-white">
							<h3 class="post-content-title mb-4">İlan Detayları</h3>
							<ul class="details-list">
								<li><strong>Ürün İd:</strong> @ViewBag.productId </li>
								<li><strong>Metrekare:</strong> @ViewBag.size m2 </li>
								<li><strong>Oda Sayısı:</strong> @ViewBag.roomcount </li>
								<li><strong>Yatak Odası:</strong> @ViewBag.beds</li>
								<li><strong>Banyo Sayısı:</strong> @ViewBag.baths </li>
								<li><strong>Yapı Türü:</strong> Beton </li>
								<li><strong>Garaj m2:</strong> @ViewBag.garagsize </li>
								<li><strong>Garaj sayısı:</strong> 1</li>
								<li><strong>Fiyat:</strong> @ViewBag.price ₺</li>
								<li><strong>Yapım Yılı:</strong> @ViewBag.buildyear </li>
								<li><strong>İlan Tarihi:</strong> @ViewBag.advertisementDate </li>
							</ul>
						</div>

						@await Component.InvokeAsync("_PropertyAmenityStatusTrueByPropertyIdComponentPartial", new { id = ViewBag.i })

					</div>

					<div class="single-bg-white">
						<h3 class="post-content-title mb-4">Lokasyon Bilgileri</h3>
						<div class="agent-map">
							<iframe src="@ViewBag.locationmap" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
						</div>
					</div>

					<div class="single-bg-white mb-0">
						<h3 class="post-content-title mb-4">Video</h3>
						<div class="post-content">
							<iframe src="@ViewBag.videourl" frameborder="0"
									allowfullscreen=""></iframe>
						</div>
					</div>
				</div>
			</div>

			@await Component.InvokeAsync("_PropertyAppUserComponentPartial")

		</div>
	</div>
</section>

