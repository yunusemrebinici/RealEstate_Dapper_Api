@model CreatePopularLocationDto
@{
    ViewData["Title"] = "CreatePopularLocation";
    Layout = "~/Views/Admin/Index.cshtml";
}

<form method="post">
	<div class="container-fluid pt-4 px-4">
		<div class="row g-4">
			<div class="col-12">
				<div class="bg-light rounded h-100 p-4">
					<h6 class="mb-4"> Popüler Lokasyon Ekleme Sayfası</h6>
					<div class="table-responsive">
						<table class="table">
							
							<label>Resim</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />

							<label>Şehir İsmi</label>
							<input type="text" asp-for="CityName" class="form-control" />
							<br />

							<button class="btn btn-primary">Kaydet</button>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

