@model List<ResultPopularLocationDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/Index.cshtml";
	int count = 0;
}
<style>
	img {
		border-radius: 50%;
	}
</style>

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Responsive Table</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col"> Populer Lokasyonlar </th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td><img src="@item.imageUrl" height="50px" width="50px" /> @item.cityName</td>

									<td>
										<button class="btn btn-danger btn-sm" onclick="openModal('deleteModal', '@item.cityName adlı lokasyonu silmek istediğinize emin misiniz?', '/PopularLocation/DeletePopularLocation/@item.locationID')">
											Sil
										</button>
									</td>	
									
									<td><a href="/PopularLocation/UpdatePopularLocation/@item.locationID" class="btn btn-outline-info ">Güncelle</a></td>
								</tr>
							}
						<td><a href="/PopularLocation/CreatePopularLocation" class="btn btn-info ">Yeni Kayıt</a></td>

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>



<!-- Modal -->
<div id="deleteModal" class="modal fade" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="deleteModalLabel">Silme Onayı</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<p id="deleteMessage"></p>
			</div>
			<div class="modal-footer">
				<a id="confirmButton" href="#" class="btn btn-danger">Evet, Sil</a>
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
			</div>
		</div>
	</div>
</div>



