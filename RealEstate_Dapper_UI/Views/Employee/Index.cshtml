@model List<ResultEmployeeDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/Index.cshtml";
	int count = 0;
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Personel Tablosu</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Personel Adı </th>
								<th scope="col">Başlık </th>
								<th scope="col">Mail </th>
								<th scope="col">Numara </th>
								<th scope="col">Resim Yolu </th>
								<th scope="col">Durum </th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.Name</td>
									<td>@item.Title</td>
									<td>@item.Mail</td>
									<td>@item.PhoneNumber</td>
									<td>@item.ImageUrl</td>
									@if (item.Status == true)
									{
										<td>Aktif</td>
									}
									else
									{
										<td>Pasif</td>
									}

									<td><a href="/Employee/DeleteEmployee/@item.EmployeeID" class="btn btn-outline-danger ">Sil</a></td>
									<td><a href="/Employee/UpdateEmployee/@item.EmployeeID" class="btn btn-outline-info ">Güncelle</a></td>

								</tr>
							}
						<td><a href="~/Employee/CreateEmployee" class="btn btn-info ">Yeni Personel</a></td>

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>


