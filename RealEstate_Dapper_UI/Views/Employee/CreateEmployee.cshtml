@model CreateEmployeeDto
@{
    ViewData["Title"] = "CreateEmployee";
    Layout = "~/Views/Admin/Index.cshtml";
}

<form method="post">
	<div class="container-fluid pt-4 px-4">
		<div class="row g-4">
			<div class="col-12">
				<div class="bg-light rounded h-100 p-4">
					<h6 class="mb-4">Personel Ekleme Sayfası</h6>
					<div class="table-responsive">
						<table class="table">

							<label>Personel Adı</label>							
							<input type="text" asp-for="Name" class="form-control" />
							<br />

							<label>Ünvan</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />

							<label>Mail Adresi</label>
							<input type="email" asp-for="Mail" class="form-control" />
							<br />

							<label>Telefon Numarası</label>
							<input type="tel" asp-for="PhoneNumber" class="form-control" />
							<br />

							<label>Resim Yolu</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />

							<button class="btn btn-primary">Kaydet</button>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

